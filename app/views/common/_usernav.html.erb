<% if user_signed_in? %>
  Hi, <%= current_user.email %>
  <%= link_to t(:list_my_posting), jobs_path(current_user, :user_id => current_user) %> |
  <%= link_to t(:settings), edit_user_registration_path %> |
  <%= link_to t(:logout), destroy_user_session_path, :method => :delete %>
<% else %>
